<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="309dp"
        android:layout_height="283dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/form_saved_txt_id"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Reservation Saved"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_msg_txt_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi, your reservation has been saved.
            \nTo view it, click the OK button below.
            \nYou will be re-direct back to the Home page.
            \nSelect view Reservations button.
            \nEnter your email.
            \nAnd your reservation information will be displayed.
            \nTHANKS!"
            android:textSize="16sp" />

        <Button
            android:id="@+id/return_main_bttn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openMain"
            android:text="OK"
            app:cornerRadius="15dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>